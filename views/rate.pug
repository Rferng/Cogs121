extends layout

block content
    head
    style.
      body {margin:0;}
      ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
      position: fixed;
      top: 0;
      width: 100%;
      }
      li {
      float: left;
      }
      li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      }
      li a:hover:not(.active) {
      background-color: #111;
      }
      .active {
      background-color: #4CAF50;
      }
    body
        ul
          li
            a(href='/') Home
          li
            a(href='/select') Start
          li
            a(href='/record') Hider
          li
            a(href='/find') Seeker
          li
            a.active(href='/rate') Rate
        br
        br

    h1(class='testHome text-center') #[strong Ghost Tag]
    h4(class='text-center') Tell Others How Your Game Went!
    
    input(id="input-id" class="center-block")
        
        
    h4(class='text-center') How difficult was the route you made?

    div(class="button-group-wrapper")
        div(class="btn-group btn-group-justified" id="traffic-group" role="group" aria-label="...")
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-success") Easy
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-warning") Medium
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-danger") Hard
    
    
    h4(class="text-center") Duration of the Trip: #[strong 5:00]
                    
    h4(class="text-center") Anything else you'd like to add?
    
    div(class="form-group")
        textarea(class="form-control" rows="5" id="comment")
    br
    div(class="text-center")
        button(type="button" id="cancel" class="btn btn-danger") Cancel
        button(type="button" id="submit" class="btn btn-success" data-toggle="modal" data-target="#myModal") Submit
    
    div(id="myModal" class="modal fade" role="dialog")
        div(class="modal-dialog")
            div(class="modal-content")
                div(class="modal-header")
                    button(type="button" class="close" data-dismiss="modal")
                    h4(class="modal-title")
                        div(class="modal-body")
                            p Response Submited!
                            div(class="modal-footer")
                                button(type="button" id="close" class="btn btn-default" data-dismiss="modal")  Close

    script(type="text/javascript").
        window.onload = function() {

            // initialize with defaults
            $("#input-id").rating({showCaption: false,
                                   clearButton: ""});

            $("#traffic-group .btn").click(function() {
                $("#traffic-group .btn").removeClass("active");
                $(this).addClass("active");
            });


            $("#time-group .btn").click(function() {
              $("#time-group .btn").removeClass("active");
              $(this).addClass("active");
            });

            document.getElementById("close").onclick = function() {
                location.href = "/select";
            };
            

            document.getElementById("cancel").onclick = function() {
                location.href = "/select";
            };
        };
        
    